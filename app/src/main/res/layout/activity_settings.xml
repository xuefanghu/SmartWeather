<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/city_input_title"
        android:layout_width="272dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="37dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Enter city location" />

    <AutoCompleteTextView
        android:id="@+id/city_input"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="84dp"
        android:completionThreshold="0"
        android:hint="Current Location" />

    <RadioGroup
        android:layout_width="271dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="186dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/metric_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Display temperature in"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/c_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:onClick="onRadioButtonClicked"
            android:text="@string/celsius"
            android:textColor="@drawable/selector_radio_btn_text"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/f_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:onClick="onRadioButtonClicked"
            android:text="@string/fahrenheit"
            android:textColor="@drawable/selector_radio_btn_text"
            android:textSize="20sp" />
    </RadioGroup>


</RelativeLayout>