<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="60dp"
    android:layout_marginEnd="60dp">


    <TextView
        android:id="@+id/city_input_title"
        android:layout_width="272dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/enter_city_location" />

    <AutoCompleteTextView
        android:id="@+id/city_input"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_input_title"
        android:layout_marginTop="10dp"
        android:completionThreshold="0"
        android:hint="@string/current_location" />

    <RadioGroup
        android:layout_width="272dp"
        android:layout_height="104dp"
        android:layout_below="@id/city_input"
        android:layout_marginTop="30dp"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/metric_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/display_temperature_in"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/c_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:text="@string/celsius"
            android:textColor="@drawable/selector_radio_btn_text"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/f_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/fahrenheit"
            android:textColor="@drawable/selector_radio_btn_text"
            android:textSize="20sp" />
    </RadioGroup>


</RelativeLayout>